<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/data_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|center"
            android:text="0"
            android:textColor="@color/white"
            android:background="#1d1d1d"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/output_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|center"
            android:text="0"
            android:textColor="@color/white"
            android:background="#1d1d1d"
            android:textSize="40sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/degree"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="deg"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

            <Button
                android:id="@+id/sine"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="sin"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/cosine"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>
            <Button
                android:id="@+id/tan"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="tan"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>
            <Button
                android:id="@+id/square"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="x^2"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/mplus"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="M+"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/second"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="2nd"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

            <Button
                android:id="@+id/natlog"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ln"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/log"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="log"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>
            <Button
                android:id="@+id/sqrt"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="x^0.5"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>
            <Button
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="x^y"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/mminus"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="M-"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/random"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="rand"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/openbracket"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="("
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

            <Button
                android:id="@+id/closingbracket"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text=")"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>
            <Button
                android:id="@+id/ce"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ce"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>


            <Button
                android:id="@+id/ac"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ac"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/pi"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="pi"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/number7"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>

            <Button
                android:id="@+id/number8"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>
            <Button
                android:id="@+id/number9"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>


            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_orange"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/e"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="e"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/number4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>

            <Button
                android:id="@+id/number5"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>
            <Button
                android:id="@+id/number6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>


            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_orange"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/exp"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="exp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_operation"/>

            <Button
                android:id="@+id/number1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>

            <Button
                android:id="@+id/number2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>
            <Button
                android:id="@+id/number3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>


            <Button
                android:id="@+id/subtract"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_orange"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mr"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="MR"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

            <Button
                android:id="@+id/number0"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>

            <Button
                android:id="@+id/number00"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="00"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>
            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>


            <Button
                android:id="@+id/addition"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_orange"/>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mc"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="MC"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>

            <Button
                android:id="@+id/nuumber000"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="000"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect_numb"/>

            <Button
                android:id="@+id/answer"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ANS"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>
            <Button
                android:id="@+id/percentage"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_others"/>


            <Button
                android:id="@+id/equals"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@drawable/ripple_effect_orange"/>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>